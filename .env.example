# dt-cli Environment Configuration
# Copy this file to .env and configure for your environment

# Server URL Configuration
# ========================
# Set this to point to your dt-cli server
# Default: http://localhost:58432
# Example for remote server: http://192.168.1.104:58432
DT_CLI_SERVER_URL=http://localhost:58432

# RAG Configuration (used by the server)
# ======================================
# Path to your codebase
RAG_CODEBASE_PATH=.

# Path to ChromaDB database
RAG_DB_PATH=./chroma_db

# Cache directory
RAG_CACHE_DIR=./.rag_cache

# Embedding model
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Number of results to return
RAG_N_RESULTS=5

# Enable caching
RAG_USE_CACHE=true

# Enable hybrid search
RAG_USE_HYBRID=true

# MCP Server Configuration
# ========================
# Host for the MCP server
RAG_MCP_HOST=0.0.0.0

# Port for the MCP server
RAG_MCP_PORT=58432
